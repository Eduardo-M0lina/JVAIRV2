{
  "info": {
    "name": "JVAIRV2 - Invoices & Payments",
    "description": "Colección de endpoints para el módulo de Facturas (Invoices) y Pagos (Invoice Payments)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Invoices",
      "item": [
        {
          "name": "Listar facturas",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/invoices?page=1&pageSize=10",
              "host": ["{{baseUrl}}"],
              "path": ["invoices"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Número de página"
                },
                {
                  "key": "pageSize",
                  "value": "10",
                  "description": "Tamaño de página"
                },
                {
                  "key": "search",
                  "value": "",
                  "description": "Búsqueda en invoice_number, work_order, property, customer",
                  "disabled": true
                },
                {
                  "key": "jobId",
                  "value": "",
                  "description": "Filtrar por ID de trabajo",
                  "disabled": true
                },
                {
                  "key": "status",
                  "value": "",
                  "description": "Filtrar por status: paid, unpaid",
                  "disabled": true
                },
                {
                  "key": "sort",
                  "value": "created_at",
                  "description": "Campo de ordenamiento (invoice_number, total, balance, created_at)",
                  "disabled": true
                },
                {
                  "key": "direction",
                  "value": "DESC",
                  "description": "Dirección de ordenamiento (ASC, DESC)",
                  "disabled": true
                }
              ]
            },
            "description": "Obtiene una lista paginada de facturas con filtros opcionales"
          },
          "response": []
        },
        {
          "name": "Listar facturas por trabajo",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/invoices?jobId=1&page=1&pageSize=10",
              "host": ["{{baseUrl}}"],
              "path": ["invoices"],
              "query": [
                {
                  "key": "jobId",
                  "value": "1",
                  "description": "Filtrar por ID de trabajo"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "pageSize",
                  "value": "10"
                }
              ]
            },
            "description": "Obtiene facturas filtradas por un trabajo específico"
          },
          "response": []
        },
        {
          "name": "Listar facturas pagadas",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/invoices?status=paid&page=1&pageSize=10",
              "host": ["{{baseUrl}}"],
              "path": ["invoices"],
              "query": [
                {
                  "key": "status",
                  "value": "paid",
                  "description": "Solo facturas pagadas (balance <= 0)"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "pageSize",
                  "value": "10"
                }
              ]
            },
            "description": "Obtiene facturas con status pagado (balance <= 0)"
          },
          "response": []
        },
        {
          "name": "Listar facturas pendientes",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/invoices?status=unpaid&page=1&pageSize=10",
              "host": ["{{baseUrl}}"],
              "path": ["invoices"],
              "query": [
                {
                  "key": "status",
                  "value": "unpaid",
                  "description": "Solo facturas pendientes (balance > 0)"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "pageSize",
                  "value": "10"
                }
              ]
            },
            "description": "Obtiene facturas con status pendiente (balance > 0)"
          },
          "response": []
        },
        {
          "name": "Buscar facturas",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/invoices?search=INV-001&page=1&pageSize=10",
              "host": ["{{baseUrl}}"],
              "path": ["invoices"],
              "query": [
                {
                  "key": "search",
                  "value": "INV-001",
                  "description": "Busca en invoice_number, work_order, property, customer"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "pageSize",
                  "value": "10"
                }
              ]
            },
            "description": "Busca facturas por múltiples campos (invoice_number, work_order, property, customer)"
          },
          "response": []
        },
        {
          "name": "Crear factura",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"jobId\": 1,\n    \"invoiceNumber\": \"INV-2025-001\",\n    \"total\": 2500.00,\n    \"description\": \"Servicio de instalación de sistema HVAC\",\n    \"allowOnlinePayments\": true,\n    \"notes\": \"Factura generada por trabajo completado\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/invoices",
              "host": ["{{baseUrl}}"],
              "path": ["invoices"]
            },
            "description": "Crea una nueva factura asociada a un trabajo"
          },
          "response": []
        },
        {
          "name": "Obtener factura por ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/invoices/:id",
              "host": ["{{baseUrl}}"],
              "path": ["invoices", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "1",
                  "description": "ID de la factura"
                }
              ]
            },
            "description": "Obtiene una factura por su ID, incluyendo balance calculado (total - pagos)"
          },
          "response": []
        },
        {
          "name": "Actualizar factura",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"invoiceNumber\": \"INV-2025-001-REV\",\n    \"total\": 2750.00,\n    \"description\": \"Servicio de instalación de sistema HVAC (revisado)\",\n    \"allowOnlinePayments\": true,\n    \"notes\": \"Monto actualizado por materiales adicionales\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/invoices/:id",
              "host": ["{{baseUrl}}"],
              "path": ["invoices", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "1",
                  "description": "ID de la factura a actualizar"
                }
              ]
            },
            "description": "Actualiza una factura existente. Solo se envían los campos a modificar."
          },
          "response": []
        },
        {
          "name": "Eliminar factura",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/invoices/:id",
              "host": ["{{baseUrl}}"],
              "path": ["invoices", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "1",
                  "description": "ID de la factura a eliminar"
                }
              ]
            },
            "description": "Elimina una factura (soft delete)"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Invoice Payments",
