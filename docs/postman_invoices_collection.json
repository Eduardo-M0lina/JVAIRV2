                  "description": "Búsqueda por payment_id",
                  "disabled": true
                },
                {
                  "key": "sort",
                  "value": "created_at",
                  "description": "Campo de ordenamiento (amount, created_at, payment_processor)",
                  "disabled": true
                },
                {
                  "key": "direction",
                  "value": "DESC",
                  "description": "Dirección de ordenamiento (ASC, DESC)",
                  "disabled": true
