    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Listar permisos",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/permissions?page=1&pageSize=10",
          "host": ["{{baseUrl}}"],
          "path": ["permissions"],
          "query": [
            {
              "key": "page",
              "value": "1",
              "description": "Número de página (por defecto: 1)"
            },
            {
              "key": "pageSize",
              "value": "10",
              "description": "Tamaño de página (por defecto: 10)"
            },
            {
              "key": "abilityId",
              "value": "",
              "description": "Filtrar por ID de ability",
              "disabled": true
            },
            {
              "key": "entityType",
              "value": "",
              "description": "Filtrar por tipo de entidad",
              "disabled": true
            },
            {
              "key": "entityId",
              "value": "",
              "description": "Filtrar por ID de entidad",
              "disabled": true
            },
            {
              "key": "forbidden",
              "value": "",
              "description": "Filtrar por prohibición",
              "disabled": true
            }
          ]
        },
        "description": "Obtiene una lista paginada de permisos"
      },
      "response": []
    },
    {
      "name": "Crear permiso",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"abilityId\": 1,\n    \"entityType\": \"user\",\n    \"entityId\": 1,\n    \"forbidden\": false,\n    \"conditions\": \"{}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/permissions",
          "host": ["{{baseUrl}}"],
          "path": ["permissions"]
        },
        "description": "Crea un nuevo permiso en el sistema"
      },
      "response": []
    },
    {
      "name": "Obtener permiso",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/permissions/:id",
          "host": ["{{baseUrl}}"],
          "path": ["permissions", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "1",
              "description": "ID del permiso"
            }
          ]
        },
        "description": "Obtiene un permiso por su ID"
      },
      "response": []
    },
    {
      "name": "Actualizar permiso",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"abilityId\": 1,\n    \"entityType\": \"user\",\n    \"entityId\": 1,\n    \"forbidden\": true,\n    \"conditions\": \"{}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/permissions/:id",
          "host": ["{{baseUrl}}"],
          "path": ["permissions", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "1",
              "description": "ID del permiso"
            }
          ]
        },
        "description": "Actualiza un permiso existente"
      },
      "response": []
    },
    {
