        "url": {
          "raw": "{{baseUrl}}/permissions/check/:abilityId/:entityType/:entityId",
          "host": ["{{baseUrl}}"],
          "path": ["permissions", "check", ":abilityId", ":entityType", ":entityId"],
          "variable": [
            {
              "key": "abilityId",
              "value": "1",
              "description": "ID de la ability"
            },
            {
              "key": "entityType",
              "value": "user",
              "description": "Tipo de entidad"
            },
            {
              "key": "entityId",
              "value": "1",
              "description": "ID de la entidad"
            }
          ]
        },
        "description": "Verifica si existe un permiso específico"
