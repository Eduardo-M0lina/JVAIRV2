{
  "info": {
    "name": "JVAIRV2 - Quotes",
    "description": "Colección de endpoints para el módulo de Cotizaciones (Quotes)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Listar cotizaciones",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/quotes?page=1&pageSize=15",
          "host": ["{{baseUrl}}"],
          "path": ["quotes"],
          "query": [
            {
              "key": "page",
              "value": "1",
              "description": "Número de página"
            },
            {
              "key": "pageSize",
              "value": "15",
              "description": "Tamaño de página"
            },
            {
              "key": "search",
              "value": "",
              "description": "Búsqueda por número de cotización",
              "disabled": true
            },
            {
              "key": "jobId",
              "value": "",
              "description": "Filtrar por ID de trabajo",
              "disabled": true
            },
            {
              "key": "quoteStatusId",
              "value": "",
              "description": "Filtrar por ID de estado de cotización",
              "disabled": true
            },
            {
              "key": "sort",
              "value": "created_at",
              "description": "Campo de ordenamiento (quote_number, amount, created_at)",
              "disabled": true
            },
            {
              "key": "direction",
              "value": "DESC",
              "description": "Dirección de ordenamiento (ASC, DESC)",
              "disabled": true
            }
          ]
        },
        "description": "Obtiene una lista paginada de cotizaciones con filtros opcionales"
      },
      "response": []
    },
    {
      "name": "Listar cotizaciones por trabajo",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/quotes?jobId=1&page=1&pageSize=15",
          "host": ["{{baseUrl}}"],
          "path": ["quotes"],
          "query": [
            {
              "key": "jobId",
              "value": "1",
              "description": "Filtrar por ID de trabajo"
            },
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "pageSize",
              "value": "15"
            }
          ]
        },
        "description": "Obtiene cotizaciones filtradas por un trabajo específico"
      },
      "response": []
    },
    {
      "name": "Crear cotización",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"jobId\": 1,\n    \"quoteNumber\": \"Q-2025-001\",\n    \"quoteStatusId\": 1,\n    \"amount\": 1500.00,\n    \"description\": \"Cotización para reemplazo de compresor\",\n    \"notes\": \"Incluye mano de obra e instalación\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/quotes",
          "host": ["{{baseUrl}}"],
          "path": ["quotes"]
        },
        "description": "Crea una nueva cotización para un trabajo"
      },
      "response": []
    },
    {
      "name": "Obtener cotización por ID",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/quotes/:id",
          "host": ["{{baseUrl}}"],
          "path": ["quotes", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "1",
              "description": "ID de la cotización"
            }
          ]
        },
        "description": "Obtiene una cotización por su ID"
      },
      "response": []
    },
    {
      "name": "Actualizar cotización",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"jobId\": 1,\n    \"quoteNumber\": \"Q-2025-001-REV\",\n    \"quoteStatusId\": 2,\n    \"amount\": 1750.00,\n    \"description\": \"Cotización revisada para reemplazo de compresor\",\n    \"notes\": \"Precio actualizado con materiales adicionales\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/quotes/:id",
          "host": ["{{baseUrl}}"],
          "path": ["quotes", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "1",
              "description": "ID de la cotización a actualizar"
            }
          ]
        },
        "description": "Actualiza una cotización existente"
      },
      "response": []
    },
    {
      "name": "Cambiar estado de cotización",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"jobId\": 1,\n    \"quoteNumber\": \"Q-2025-001\",\n    \"quoteStatusId\": 3,\n    \"amount\": 1500.00,\n    \"description\": \"Cotización para reemplazo de compresor\",\n    \"notes\": \"Aprobada por el cliente\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/quotes/:id",
          "host": ["{{baseUrl}}"],
          "path": ["quotes", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "1",
              "description": "ID de la cotización"
            }
          ]
        },
        "description": "Actualiza el estado de una cotización (ej: Need to Send -> Sent -> Approved -> Declined)"
      },
      "response": []
    },
    {
      "name": "Eliminar cotización",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/quotes/:id",
          "host": ["{{baseUrl}}"],
          "path": ["quotes", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "1",
              "description": "ID de la cotización a eliminar"
            }
          ]
        },
        "description": "Elimina una cotización (soft delete)"
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080/api/v1"
    }
  ]
}
